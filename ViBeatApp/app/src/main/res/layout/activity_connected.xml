<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ConnectedActivity"
    android:background="@color/background">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginBottom="10dp"
        android:focusableInTouchMode="true">

        <Space
            android:layout_width="42dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="180dp"
            android:layout_height="77dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:fontFamily="@font/caveat_brush"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="28dp" />

        <Space
            android:layout_width="42dp"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/isPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Private"
            android:textSize="18sp"
            android:fontFamily="@font/caveat_brush"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="36dp" />
    </TableRow>

    <TextView
        android:id="@+id/connected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Connected to your party"
        android:textColor="@color/text"
        android:layout_marginBottom="10dp"
        android:textSize="36sp"
        app:fontFamily="@font/caveat_brush" />

    <ListView
        android:id="@+id/connected_list"
        android:layout_width="wrap_content"
        android:layout_height="286dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="80dp">

    </ListView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/connected2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Pending requests"
        android:layout_marginBottom="10dp"
        android:textColor="@color/text"
        android:textSize="36sp"
        app:fontFamily="@font/caveat_brush" />

    <ListView
        android:id="@+id/waiting_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>