<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.PlaylistActivity"
    android:background="@color/background"
    android:weightSum="100">

    <include layout="@layout/toolbar"></include>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:background="@color/colorAccentlight">

        <ImageButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_add_blue" />

        <ImageButton
            android:id="@+id/mute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_mute_blue" />

        <ImageButton
            android:id="@+id/play_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_play_blue" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_next_blue" />


        <ImageButton
            android:id="@+id/connected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_connect_blue" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="10"
        android:text="Now Vibing"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        app:fontFamily="@font/open_sans_semibold" />

    <android.support.v7.widget.RecyclerView
        android:scrollbars="vertical"
        android:id="@+id/playlist"
        android:layout_weight="65"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:outlineProvider="paddedBounds"/>

</LinearLayout>