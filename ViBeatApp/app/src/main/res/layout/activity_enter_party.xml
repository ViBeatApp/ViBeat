<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activities.EnterPartyActivity"
    android:background="@drawable/rose_colored_lenses"
    android:weightSum="100">

    <include layout="@layout/toolbar"></include>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/create"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:text="   Create Your Party!   "
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:visibility="visible"
        app:fontFamily="@font/caveat_brush"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="65dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="   Parties around you   "
        android:textAllCaps="false"
        android:textSize="30sp"
        app:fontFamily="@font/caveat_brush"
        android:textColor="@color/colorPrimaryDark"/>

    <ListView
        android:id="@+id/parties_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00ff0000"
        android:dividerHeight="1dp"/>

</LinearLayout>