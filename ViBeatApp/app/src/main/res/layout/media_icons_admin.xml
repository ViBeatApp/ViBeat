<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="100"
        tools:background="@color/colorAccentlight"
        tools:ignore="Suspicious0dp">

        <ImageButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_add_blue" />

        <ImageButton
            android:id="@+id/mute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_mute_blue" />

        <ImageButton
            android:id="@+id/play_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_play_blue" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_next_blue" />


        <ImageButton
            android:id="@+id/connecting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="20"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_connect_blue" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>

    <TextView
        android:id="@+id/party_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:layout_gravity="center_vertical"
        android:text="Party name"
        android:fontFamily="@font/josefin_sans"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"/>

</LinearLayout>