<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vibeat.vibeatapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="ViBeat"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EnterPartyActivity"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.EnterPartyActivity"/>
        <activity android:name=".Activities.CreatePartyActivity"
            android:windowSoftInputMode="adjustNothing"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.CreatePartyActivity"/>
        <activity android:name=".Activities.PlaylistActivity"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.PlaylistActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="1300552146744496" />

        <activity android:name=".Activities.ConnectedActivity"
            android:windowSoftInputMode="adjustNothing"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.ConnectedActivity"/>
        <activity android:name=".Activities.AddMusicActivity"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.AddMusicActivity"/>
        <activity android:name=".Activities.LoadingActivity"
            android:noHistory="true"
            android:launchMode="singleTop"
            android:parentActivityName=".Activities.LoadingActivity"/>
    </application>

</manifest>